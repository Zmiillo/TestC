@model TestC.Models.Document
@{
    ViewBag.Title = "Удалить документ?";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Номер</dt>
        <dd>
            @Html.DisplayFor(model => model.DocumentNumber)
        </dd>
 
        <dt>Дата</dt>
        <dd>
            @Html.DisplayFor(model => model.DocumentDateTime.ToString("d"))
        </dd>
    </dl>
 
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>