@model TestC.Models.Document
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="DocumentNumber" class="control-label">Номер</label>
        <input type="text" asp-for="DocumentNumber" class="form-control" />
        <span asp-validation-for="DocumentNumber"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DocumentDateTime" class="control-label">Дата</label>
        <input type="date" asp-for="DocumentDateTime" class="form-control" />
        <span asp-validation-for="DocumentDateTime"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="NumberSupply" class="control-label">Номер поставки</label>
        <input type="text" asp-for="NumberSupply" class="form-control" />
        <span asp-validation-for="NumberSupply"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="DocumentType" class="control-label">Тип документа</label>
        @Html.DropDownList("DocumentType",ViewData["DocumentType"] as SelectList, htmlAttributes: new { @class = "form-control" ,})
    </div>

    <div class="form-group">
        <label asp-for="Note" class="control-label">Примечание</label>
        <input type="text" asp-for="Note" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Department" class="control-label">Цех</label>
        @Html.DropDownList("Department", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <input type="hidden" asp-for="DateTimeCreate" />

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
    
</form>